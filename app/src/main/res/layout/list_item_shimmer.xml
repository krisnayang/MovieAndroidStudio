<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/movieIcon"
        android:background="#E1DEDE"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        />
    <TextView
        android:id="@+id/movieName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/movieIcon"
        app:layout_constraintStart_toEndOf="@id/movieIcon"
        android:background="#E1DEDE"/>
    <TextView
        android:id="@+id/movieYear"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/movieName"
        app:layout_constraintStart_toStartOf="@id/movieName"
        android:background="#E1DEDE"/>
    <TextView
        android:id="@+id/movieRatingBar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@id/movieName"
        app:layout_constraintTop_toBottomOf="@id/movieYear"
        android:background="#E1DEDE"/>
    <TextView
        android:id="@+id/movieRating"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/movieRatingBar"
        app:layout_constraintStart_toEndOf="@id/movieRatingBar"
        app:layout_constraintBottom_toBottomOf="@id/movieRatingBar"
        android:background="#E1DEDE"/>
</androidx.constraintlayout.widget.ConstraintLayout>